<resources>

    <style name="Theme.RandomUsers" parent="Theme.MaterialComponents.Light.NoActionBar"><!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.RandomUsers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="MainFragmentContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
        <item name="defaultNavHost">true</item>
        <item name="navGraph">@navigation/main_graph</item>
    </style>

    <style name="LoadingContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/loading_background</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
