<resources>
    <!-- Base application theme. -->
    <style name="Theme.RandomUsers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="MainFragmentContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
        <item name="defaultNavHost">true</item>
        <item name="navGraph">@navigation/main_graph</item>
    </style>

    <!--    <style name="ToolbarTitleStyle">-->
    <!--        <item name="fontFamily">@font/roboto_medium</item>-->
    <!--        <item name="android:textSize">@dimen/text_size_medium_large</item>-->
    <!--    </style>-->

    <style name="UserPictureStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <!--        <item name="android:backgroundTint">@color/basic_400</item>-->
        <item name="android:scaleType">fitCenter</item>
        <item name="android:outlineProvider">background</item>
        <!--        <item name="android:src">@drawable/ic_user_alt</item>-->
    </style>
</resources>